<%- include('../_partial/_header'); -%>
<style>
  .add-post{
    margin: 20px auto;
  }
  .card{
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    row-gap: 15px;
    column-gap: 12px;
    margin: 20px;
  }
  .card-single{
    border: 1.5px solid rgb(129, 126, 126);
    border-radius: 8px;
    padding: 6px;
    width: 265px;
    height: 15rem;
    overflow: auto;
  }
  
  .card-img{
    width: 100%;
    height: 65%;
  }
  .card-text{
    width:100%;
    height: 35%;
  }
  /* .btns-card{
    margin: 5px auto;
  } */
  .btns-card #btn1{
    background-color: rgba(56, 56, 248, 0.788);
    border-radius: 6px;
    width: 70px;
    border: 0.5px solid rgb(139, 137, 137);
  }
  .btn-card1{
    text-transform: none;
    background-color: rgba(56, 56, 248, 0.788);

  }
  .btns-card #btn2{
    background-color: rgb(230, 225, 225);
    border-radius: 6px;
    width: 70px;
    border: 0.5px solid rgb(139, 137, 137);
  }
  .btn-card2{
    text-transform: none;
    background-color: rgb(230, 225, 225);

  }
</style>
<main class="page">
  <h1>
    <!-- <% if(currentUser){ %>
    Welcome to Node, <%= currentUser.username %>
    <% }else{  %>
      Welcome to Node
    <% } %> -->
    My Posts
  </h1>
        <div class="add-post">
          <button>
          <a href="/posts/add" class="btn-post">New Post</a>
        </button>
        </div>
  <div class="card">

    <% posts.forEach(function(post){ %>
      <div class="card-single">
        <img src="" alt="" class="card-img">
        <div class="card-text">
        <h3 class="card-heading"><%= post.title %></h3>
        <p class="card-content"><%= post.content %></p>
        <div class="btns-card">
          <button id="btn1">
            
            <a href="posts/<%= post._id %>" class="btn-card1">Read</a>
          </button>
          <button id="btn2">
            <a href="" class="btn-card2">Edit</a>
  
          </button>
        </div>
      </div>
      </div>
    <%  }) %>
  </div>
</main>

<%- include('../_partial/_footer'); -%>