<%- include('../_partial/_header'); -%>
<style>
  .form{
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
  }
  .form-container{
    width: 55%;
  }
  form{
    border: 1.5px solid rgb(150, 146, 146);
    border-radius: 5px;
    padding: 20px;
  }
  form label{
    display: block;
    padding-top: 0.65rem;
  }
  /* .form-head{
    background-color: rgb(70, 68, 68);
  } */
  form input{
    width: 100%;
    height: 1.5rem;
    border: 1.5px solid rgb(150, 146, 146);
    border-radius: 6px;
  }
  .btn-form{
    width: 15%;
    color: rgb(247, 236, 236);
    margin-top: 0.75rem;
    background-color: rgb(71, 145, 71);
    border-radius: 8px;
    box-shadow: none;
    border: none;
  }
  .btn-form:hover{
    background-color: rgb(25, 128, 25);
    border: 2px solid rgb(61, 60, 60);
  }
</style>
<main class="page">
  <div class="form">
    <div class="form-container">
      <form action="/signup" method="POST">
        <h3 class="form-head">Sign up</h3>
        <label for="email">Username</label>
        <input type="text" name="username" id="" placeholder="Username">
        <label for="email">Email</label>
        <input type="email" name="email" id="" placeholder="Email">
        <label for="password">Password</label>
        <input type="password" name="password" id="" placeholder="Password"><br>
        <label for="Re-password">Re-password</label>
        <input type="password" name="Re-password" id="" placeholder="Re-password"><br>
        <input type="submit" value="Sign up" class="btn-form">
      </form>
    </div>
  </div>
</main>

<%- include('../_partial/_footer'); -%>